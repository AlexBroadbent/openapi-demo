{
  "name": "openapi-test",
  "version": "0.1.0",
  "description": "Demo repo for OpenAPI talk",
  "author": "Alexander Broadbent",
  "homepage": "https://abroadbent.com",
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier --write '**/*.ts'",
    "build": "tsc",
    "dev": "nodemon -r dotenv-flow/config --watch src --files src/index.ts",
    "test": "jest --maxWorkers=25%",
    "generate:types": "openapi-typescript src/config/openapi.yml --output src/types/generated/openapi-schema.ts",
    "generate:schema": "redocly bundle src/config/openapi.yml -o src/config/openapi.bundle.json",
    "generate": "pnpm run generate:types && pnpm run generate:schema"
  },
  "repository": {
    "type": "git",
    "url": "url+https://github.com/AlexBroadbent/openapi-demo.git"
  },
  "bugs": {
    "url": "https://github.com/AlexBroadbent/openapi-demo/issues"
  },
  "peerDependencies": {
    "@jest/transform": "29.7.0"
  },
  "devDependencies": {
    "@redocly/cli": "1.2.0",
    "@side/jest-runtime": "1.1.0",
    "@swc/core": "1.3.86",
    "@swc/jest": "0.2.29",
    "@tsconfig/node18": "18.2.2",
    "@types/dotenv-flow": "3.3.1",
    "@types/jest": "29.5.5",
    "@types/node": "20.6.3",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "openapi-typescript": "6.6.1",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "dotenv-flow": "3.3.0",
    "fastify": "4.23.2",
    "fastify-openapi-glue": "4.3.3",
    "fastify-plugin": "4.5.1",
    "lodash": "4.17.21",
    "pino": "8.15.1",
    "pino-pretty": "10.2.0"
  },
  "engines": {
    "node": "18"
  }
}
